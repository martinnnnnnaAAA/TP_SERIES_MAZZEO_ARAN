@{
    ViewData["Title"] = "Index";
}
<section>
@foreach (SERIES item in ViewBag.ListaSeries)
{
    <div class="tarjeta">
        <img class="series-image" src=@item.ImagenSerie alt="Imagen de la serie">
        <div class="series-name">@item.Nombre</div>
        <div class="links">
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#ModalSerie" onclick="MostrarTemporadas(@item.IdSerie)">
                Temporadas 
            </button>

            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#ModalSerie" onclick="MostrarActores(@item.IdSerie)">
                Actores 
            </button>

            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#ModalSerie" onclick="MostrarMasInfo(@item.IdSerie)">
                Mas Info 
            </button>
        </div>
    </div>
}
</section>
<div class="modal fade" id="ModalSerie" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="TituloSerie">Modal title</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body" id="info">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
      </div>
    </div>
  </div>
</div>
